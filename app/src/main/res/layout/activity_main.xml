<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergi.airhockey.MainActivity"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="576dp"
        android:layout_height="368dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/botonAzul"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#4573ff"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="110dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp" />

        <Button
            android:id="@+id/botonRojo"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/botonAzul"
            android:layout_alignBottom="@+id/botonAzul"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#ff3f3f"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="110dp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

